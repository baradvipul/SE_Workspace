#include <stdio.h>

int main() {
    char name[50];
    int roll;
    int marks[5];
    int i, sum = 0;
    float avg;
    char grade;

    // Input student details
    printf("Enter student name: ");
    scanf("%s", name);

    printf("Enter roll number: ");
    scanf("%d", &roll);

    printf("Enter marks of 5 subjects:\n");
    for (i = 0; i < 5; i++) {
        printf("Subject %d: ", i + 1);
        scanf("%d", &marks[i]);
        sum += marks[i];
    }

    // Calculate average
    avg = sum / 5.0;

    // Assign grade
    if (avg >= 90)
        grade = 'A';
    else if (avg >= 75)
        grade = 'B';
    else if (avg >= 60)
        grade = 'C';
    else if (avg >= 40)
        grade = 'D';
    else
        grade = 'F';

    // Output
    printf("\n--- Student Result ---\n");
    printf("Name       : %s\n", name);
    printf("Roll No    : %d\n", roll);
    printf("Average    : %.2f\n", avg);
    printf("Grade      : %c\n", grade);

    return 0;
}
