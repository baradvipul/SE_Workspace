#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp;       
    char data[100];

    fp = fopen("example.txt", "w");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    printf("Enter some text: ");
    fgets(data, sizeof(data), stdin);

    fprintf(fp, "%s", data); 
    fclose(fp);  

    fp = fopen("example.txt", "r");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    printf("\nReading from file:\n");
    while (fgets(data, sizeof(data), fp) != NULL) {
        printf("%s", data);
    }

    fclose(fp);  
    return 0;
}
